@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Sve uloge</h1>
<p>
    @using (Html.BeginForm("Index", "Role", FormMethod.Get))
    {
        <div class="input-group">
            @Html.TextBox("search")
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Pretraži</button>
            </div>
        </div>

    }
</p>
<a asp-action="Create" class="btn btn-sm btn-primary">Nova Uloga</a>
<a asp-area="" asp-controller="Album" asp-action="Index" class="btn btn-sm btn-primary">Albumi</a>
<a asp-area="" asp-controller="Zamjena" asp-action="Index" class="btn btn-sm btn-primary">Zamjene</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Naziv</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                @*<td i-role="@role.Id"></td>*@
                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Dodaj</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Izbriši
                        </button>
                    </form>
                    </td>
            </tr>

        }
    </tbody>
</table>
