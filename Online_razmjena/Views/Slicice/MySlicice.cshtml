@{
    ViewData["Title"] = "Moje Sličice";
}
@model IEnumerable<SliciceModel>
<p>
    @using (Html.BeginForm("Index", "Slicice", FormMethod.Get))
    {

        <div class="input-group">
            @Html.TextBox("search")
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>

    }
</p>
<div class="container">
    <h3 class="display-4">Sličice</h3>
    <div class="row">

        @foreach (var slicica in Model)
        {
            if (slicica.Korisnik == @User.Identity.Name)
            {
                <div class="col-md-4">
                    <partial name="_sliciceThumbnailDelete" model="@slicica" />
                </div>
            }
        }

    </div>
</div>
