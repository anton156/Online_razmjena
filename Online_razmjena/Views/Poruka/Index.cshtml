@model IEnumerable<Online_razmjena.Models.PorukaModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary float-lg-left">Nova Poruka</button></a>&nbsp;&nbsp;
    <a asp-action="Poslano"><button type="button" class="btn btn-primary">Poslano</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naslov)
            </th>
            <th>
                Pošiljatelj
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Primatelj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Korisnik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Primatelj)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-primary float-lg-left">Pročitaj poruku</button></a> &nbsp;|&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Izbriši</button></a>
            </td>
        </tr>
    
}
    </tbody>
</table>
