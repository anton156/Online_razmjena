@model PostViewModel
@{
    ViewData["Title"] = "Nova slicica";
}
<div class="container">
    <h3 class="display-4">Novi Post</h3>
    <hr />
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Uspjeh</strong> Nova slicica je dodana. <br />
            Klikni <a asp-controller="Slicice" asp-action="GetBook" asp-route-id="@ViewBag.SliciceId">ovdje</a> za detalje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Korisnik" hidden class="form-control" value="@User.Identity.Name" />
            <span asp-validation-for="Korisnik" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Naziv" class="control-label"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tip" class="control-label"></label>
            <input asp-for="Tip" class="form-control" />
            <span asp-validation-for="Tip" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Opis" class="control-label"></label>
            <textarea asp-for="Opis" class="form-control"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Image" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Odaberi glavnu sliku</label>
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj post" class="btn btn-primary" />
        </div>
    </form>
</div>